<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

<!-- TICKET -->
<record id="comment_ticket_view_form" model="ir.ui.view">
    <field name="name">ticket.form</field>
    <field name="model">anytracker.ticket</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="anytracker.ticket_view_form"/>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
    <xpath expr="/form/notebook/page[@string='Sub-tickets']" position="before">
        <page string="Comments" colspan="4" col="2">
            <field name="comment_ids" context="{'default_ticket_id': active_id}">
                <tree string="Comments">
                    <field name="user_id"/>
                    <field name="text"/>
                </tree>
            </field>
        </page>
    </xpath>
    </field>
</record>

<!-- COMMENT -->
<record id="view_comment_form" model="ir.ui.view">
    <field name="name">anytracker.comment.form</field>
    <field name="model">anytracker.comment</field>
    <field name="type">form</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <form string="Comment">
        <group colspan="4" col="6">
            <field name="user_id"/>
            <field name="date"/>
            <field name="ticket_id" invisible="1"/>
        </group>
        <separator string="Comment" colspan="4"/>
        <group colspan="4" col="1">
            <field name="text" nolabel="1"/>
        </group>
    </form>
    </field>
</record>

</data>
</openerp>
