        <!-- DASHBOARD -->
        <record id="anytracker_dashboard_view" model="ir.ui.view">
            <field name="name">anytracker.dashboard.kanban</field>
            <field name="model">anytracker.ticket</field>
            <field name="arch" type="xml">
                <kanban create="false" class="oe_background_grey o_kanban_dashboard o_account_kanban">
                    <field name="color"/>
                    <field name="number"/>
                    <field name="permalink"/>
                    <field name="name"/>
                    <field name="icon"/>
                    <field name="sequence"/>
                    <field name="relative_parent_breadcrumbs"/>
                    <field name="description"/>
                    <field name="shortened_description"/>
                    <field name="has_attachment"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}
                                oe_kanban_global_click_edit oe_semantic_html_override
                                oe_kanban_card #{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}">
                                <div class="oe_dropdown_kanban">
                                    <div class="oe_dropdown_toggle">
                                        <span class="oe_e">#</span>
                                        <ul class="oe_dropdown_menu">
                                            <li><a type="delete">Delete</a></li>
                                            <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    name: <field name="name"/><br />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="open_anytracker_dashboard_kanban" model="ir.actions.act_window">
            <field name="name">Anytracker Dashboard</field>
            <field name="res_model">anytracker.ticket</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="anytracker_dashboard_view"/>
            <field name="usage">menu</field>
            <field name="help" type="html">
                <p>This is the Anytracker Dashboard</p>
            </field>
        </record>

        <!-- MENUITEMS -->
        <menuitem id="tabmenu_anytracker"
                  name="Anytracker"
                  sequence="30"
                  web_icon="anytracker,images/icon.png"/>
        <menuitem id="menu_configuration"
                  name="Configuration"
                  sequence="200"
                  groups="group_manager"
                  parent="tabmenu_anytracker"/>

        <menuitem id="menu_dashboard"
                  name="Dashboard"
                  action="open_anytracker_dashboard_kanban"
                  parent="tabmenu_anytracker"
                  sequence="1"/>

        <menuitem id="menu_anytracker"
                  name="Anytracker"
                  parent="tabmenu_anytracker"
                  sequence="5"/>
        <menuitem id="menu_hierarchy"
                  parent="menu_anytracker"
                  sequence="10"
                  action="action_kanbans"/>
        <menuitem id="menu_all_projects"
                  parent="menu_anytracker"
                  sequence="20"
                  action="act_all_projects"/>
        <menuitem id="menu_all_nodes"
